    datap.addElement(nb);
    datap.addElement(h);
    datap.addElement(j);
    datap.addElement(ht);
    return datap;
 }*/
 
 
  public static void main(String[]args) throws IOException
 {
 BufferedReader ii = new BufferedReader(new InputStreamReader(System.in));
 Scanner i = new Scanner(System.in);
 Vector<Vector> v = new Vector<Vector>();
 brg.addElement(addb("Comics",2000,1000));
 brg.addElement(addb("Diary",1500,700));
 brg.addElement(addb("Skecth Books",4000,2000));
 int jum = brg.size();
 int jml = 0;
 int exit = 0;
 int untung = 0 ;
