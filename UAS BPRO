  switch (pil)
   {
   case 1:
    Vector<String> struk = new Vector<String>();
    int lagi = 1;
    //int s = 0;
    int t = 0;
    System.out.println("-------------------------");
    System.out.println("      ITEMS INFORMATION");
    System.out.println("-------------------------");
    System.out.println();
    for (int a = 0 ; a < jum ; a++)
     {
     System.out.print(a+1 +"  ");
     System.out.print(brg.elementAt(a).elementAt(0) +" @Rp " +brg.elementAt(a).elementAt(1));
     System.out.println();
     }
    System.out.println("-----------------------------------");
    while(lagi == 1)
     {
     System.out.print("Choose Items to buy : ");
     int beli = i.nextInt()-1;
     System.out.print("Quantity : ");
     int jumb = i.nextInt();
     
     int ht = jumb*Integer.valueOf((String) brg.elementAt(beli).elementAt(1));
     
     //struk.addElement((String) brg.elementAt(beli).elementAt(0),(String) brg.elementAt(beli).elementAt(1),ht);
     cs.addElement(cetak((String)brg.elementAt(beli).elementAt(0),Integer.valueOf((String)brg.elementAt(beli).elementAt(1)),jumb,ht));
     
     
     System.out.println(cs.size());
     System.out.println(brg.elementAt(beli).elementAt(0) +" " +jumb +"  : " +ht);
     t += ht;
     untung += jumb*(Integer.valueOf((String) brg.elementAt(beli).elementAt(1))-Integer.valueOf((String) brg.elementAt(beli).elementAt(2)));
     
     int lg = 0;
     while (lg==0)
      {
      System.out.print("(1=yes 0=no)Anything else to buy ?");
      lagi = i.nextInt();
      if((lagi == 0) || (lagi==1))
       {
       lg = 1;
       }
      else
       {
       System.out.print("The number you choosed was wrong");
       lg=0;
       }
      }
     int b = 0;
     /**while( b < cs.size())
      {
      for (int a = 0 ; a<cs.elementAt(b).size() ; a++)
       {
       System.out.print(cs.elementAt(b).elementAt(a));
       }
      System.out.println();
      b++;
      }*/
     while( b < cs.size())
      {
      System.out.print(cs.elementAt(b).elementAt(0) +" (" +cs.elementAt(b).elementAt(2) +") " +" = " +cs.elementAt(b).elementAt(3));
      System.out.println();
      b++;
      }
     //s++;
     }
    System.out.println("Total : " +t);
    System.out.println(date);
    break;
   case 2:
    System.out.print("Insert items quantity : ");
    jml = i.nextInt();
    jum += jml;
    for (int a = 0 ; a < jml ; a++)
     {
     System.out.print("Insert items name : ");
     String nb = i.next();
     System.out.print("Insert items price :");
     int hj = i.nextInt();
     System.out.print("Insert buy price :");
     int hb = i.nextInt();
    
     brg.addElement(addb(nb,hj,hb));
     System.out.println(brg.size());
     }
    break;
   case 3:
    lagi = 1;
    while (lagi == 1)
     {
     System.out.print("Insert items to delete : ");
     int hapus = i.nextInt()-1;
     jum -= 1;
     brg.removeElementAt(hapus);
     int lg = 0;
     while (lg==0)
      {
      System.out.print("(1=ya 0=tidak)Anything else to delete ? ");
      lagi = i.nextInt();
      if((lagi == 0) || (lagi==1))
       {
       lg = 1;
       }
      else
       {
       System.out.print("The number you choosed was wrong");
       lg=0;
       }
      }
     }
    break;
   case 4:
    System.out.println("-------------------------");
    System.out.println("      ITEMS INFORMATION");
    System.out.println("-------------------------");
    /**System.out.print("No ");
    System.out.print("Nama Barang ");
    System.out.print("Harga Jual ");
    System.out.println("Harga Beli");
    */
    for (int a = 0 ; a < jum ; a++)
     {
     System.out.print(a+1 +"  ");
     //for (int b = 0 ; b < brg.elementAt(a).size() ; b++)
      //{
      
     System.out.print(brg.elementAt(a).elementAt(0) +" hj : " +brg.elementAt(a).elementAt(1) +" hb : " +brg.elementAt(a).elementAt(2));
     System.out.print("  ");
      
      //}
     System.out.println();
     }
    System.out.println();
    System.out.println("hj = Harga Jual");
    System.out.println("hb = Harga Beli");
    System.out.println();
